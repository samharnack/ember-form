{{#let (hash
  get=(fn this.get @get @name)
  items=(call (fn this.get @get @name))
  ref=(fn @ref @name)
  set=(fn @set @name)
) as |collection|}}
  {{yield
    (if (lt collection.items.length @limit) (fn this.add collection.set collection.items))  
    (hash
      items=(component
        "form/collection/items"
        items=collection.items
        ref=collection.ref
        remove=(fn this.remove collection.set collection.items)
        set=(fn collection.set collection.items)
        get=collection.get
      )
    )
    collection.items.length
  }}
{{/let}}