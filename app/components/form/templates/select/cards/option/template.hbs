
<!--
  Active: "border-indigo-500 ring-2 ring-indigo-500"
-->
<label
  class={{concat
    "relative flex p-4 bg-white border rounded-lg shadow-sm cursor-pointer focus:outline-none "
    (if @checked "border-transparent " "border-gray-300 ")
    (if @disabled "opacity-25 cursor-not-allowed " "cursor-pointer " )
  }}
>
  <input
    {{on "change" @setEvent}}
    type="radio"
    name={{@name}}
    value={{@value}}
    checked={{@checked}}
    disabled={{@disabled}}
    class="sr-only"
    aria-labelledby={{concat @id "-label"}}
    aria-describedby="project-type-0-description-0 project-type-0-description-1"
  />

  <span class="flex flex-1">
    <span class="flex flex-col">
      {{yield (hash
        label=(component "form/templates/select/cards/option/label" id=(concat @id "-label"))
        description=(component "form/templates/select/cards/option/description" id=(concat @id "-description"))
        footer=(component "form/templates/select/cards/option/footer" id=(concat @id "-footer"))
      )}}
    </span>
  </span>

  {{#if @checked}}
    <svg class="w-5 h-5 text-indigo-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
    </svg>
  {{/if}}

  <!--
    Active: "border", Not Active: "border-2"
  -->
  <span
    class={{concat
      "absolute border-2 rounded-lg pointer-events-none -inset-px "
      (if @checked "border-indigo-500 " "border-transparent ")
    }}
    aria-hidden="true"
  >
  </span>
</label>

