<div class="flex items-center">
  <input
    {{on "change" @setEvent}}
    checked={{@checked}}
    class="w-4 h-4 text-indigo-600 border-gray-300 focus:ring-indigo-500"
    disabled={{@disabled}}
    id={{@id}}
    name={{@name}}
    type="radio"
    value={{@value}}
  />

  {{yield (hash
    label=(component "form/templates/select/simple-list/option/label" id=@id)
  )}}
</div>

